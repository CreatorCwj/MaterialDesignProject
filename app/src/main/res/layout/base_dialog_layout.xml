<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/base_dialog_background">

    <TextView
        android:id="@+id/dialog_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/dialog_custom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title_textView" />

    <LinearLayout
        android:id="@+id/dialog_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_custom_container"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:padding="15dp" />

</RelativeLayout>